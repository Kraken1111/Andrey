<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListTasks" parent="Theme.AppCompat.DayNight.Dialog.MinWidth">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorLight</item>
        <item name="android:colorBackground">@color/cardview_light_background</item>
        <item name="android:color">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorButtonNormal">@color/teal_700</item>
        <item name="colorControlHighlight">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorControlNormal</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.ListTasks.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ListTasks.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ListTasks.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>